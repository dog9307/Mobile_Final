<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".Level06Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/level_title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:gravity="center"
            android:background="#6179e8"
            android:textColor="#ffffff"
            android:text="@string/level_06_title"/>

        <TextView
            android:id="@+id/level_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="3"
            android:textColor="#000000"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Hint : resume \% 10"
            android:textColor="#000000"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/usage_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/hint"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button_go_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/usage_count"
            android:layout_marginTop="100dp"
            android:text="Go Next!"
            android:onClick="onClick"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>